<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_name"
        android:textColor="@color/blue_1b2839"
        android:textSize="28sp"
        android:text="@string/app_name"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignLeft="@id/tv_name"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/grey_ececec"
        android:textSize="18sp"
        android:text="记录每一个美好瞬间"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:padding="1dp"
        android:background="@drawable/rect_000000_solid_alpha_10_10"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tv_name"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.jiaye.guoke.base.component.RoundCornersImageView

            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:radius="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>